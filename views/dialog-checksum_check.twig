{% extends "flm::dialog-window.twig" %}
{% set startButtonValue = theUILang.fDiagStart %}

{% block content %}
    {{ window.pathBrowser(basename(selectedTarget), theUILang.flm_checksum_file, "", "disabled readonly") }}
{% endblock %}

{% block scripts %}
    <script>

        (function () {
            let dialog = flm.ui.getDialogs();
            const diagId = dialog.getCurrentDialog();
            const checksumFile = flm.getCurrentPath(dialog.getTargetPath(diagId));

            dialog.onStart(() => flm.checksum.doChecksumVerify(checksumFile));
        })();
    </script>
{% endblock %}



