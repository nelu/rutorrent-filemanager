
{% macro showMultiple(entries, filesOnly = false) %}
<ul>
{% for path in entries %}
    {% if not (filesOnly and isDir(path)) %}
        <li>
            <label>
                <input type="checkbox" value="{{ path }}" checked="checked" />{{ path }}
            </label>
        </li>
    {% endif %}

{% endfor %}
</ul>
{% endmacro %}

{% macro pathBrowser(default="/", title = false) %}
<fieldset>
    <legend>{{ title }}</legend>

    <input type="text" id="flm-diag-navigation-path" class="TextboxLarge" value="{{ default }}" style="width:350px;" autocomplete="off"/>
    <input id="flm-diag-navigation-browse-but" class="Button aright" type="button" value="..." style="float: right;"/>
</fieldset>
{% endmacro %}

{% import _self as window %}

<div class="flm-popup-diag-content">
    {% if multiselect %}
        <fieldset>
            {% block heading %}
            {% endblock %}
            <div id="flm-diag-paths-list" class="checklist">

                {{ window.showMultiple(selectedEntries, multiselectFilesOnly) }}
            </div>
        </fieldset>
    {% else %}
    {% block heading %}
    {% endblock %}
    {% endif %}

    {% block content %}
    {% endblock %}
</div>
{% block navigation %}
    {% if pathbrowse %}
        {{ window.pathBrowser(pathbrowse, 'To:') }}
   {% endif %}
{% endblock %}

{% block buttons %}
<div class="aright buttons-list">
    <input type="button" class="flm-diag-start Button" value="{{ startButtonValue is defined ? startButtonValue : theUILang.fcreate }}" disabled="disabled" class="Button" />
    <input type="button" class="flm-diag-cancel Button" value="{{ closeButtonValue is defined ? closeButtonValue : theUILang.fDiagClose }}"/>
</div>
{% endblock %}


{% block scripts %}
{% endblock %}
